header#page-header(itemscope, itemtype="http://schema.org/WPHeader")
  div.banner-header
    div.banner-elements
      figure.menu-options(data-toggle="nav#menu-mobile")
        img#hamburguer(data-toggle="nav#menu-mobile", src="#{ url_for('img/hamburguer-menu.svg') }", alt="imagem menu")
      a(href="#{ url_for('index.html') }", title="Link para a página principal")
        img#logo-header-mobile(src="#{ url_for('img/logo.svg') }", alt="imagem brasil de fato")
        img#logo-header-desktop(src="#{ url_for('img/logo-tagline.svg') }", alt="imagem brasil de fato")
      div#icons
        figure
          a(target="_blank", href="#{ url_for('//www.facebook.com/brasildefato') }", title="Facebook do Brasil de Fato")
            img.social-media(src="#{ url_for('img/social-media/facebook.svg') }", alt="imagem facebook") 
        figure
          a(target="_blank", href="#{ url_for('//twitter.com/Brasil_de_Fato') }", title="Twitter do Brasil de Fato")
            img.social-media(src="#{ url_for('img/social-media/twitter.svg') }", alt="imagem twitter")
        figure
          a(target="_blank", href="#{ url_for('//www.youtube.com/c/AgênciaBrasildeFato') }", title="Youtube do Brasil de Fato")
            img.social-media(src="#{ url_for('img/social-media/youtube.svg') }", alt="imagem youtube")
        figure 
          a(href="#{ url_for('') }", title="Lupa de Pesquisa")
            img#search(src="#{ url_for('img/search-icon.svg') }", alt="imagem lupa")
  include menu_desktop
