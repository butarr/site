nav#menu-desktop(hidden itemscope itemtype="http://schema.org/SiteNavigationElement")
  ul.full-menu-list
    li
      a(itemprop="url" href="/")= 'Início'
      meta(itemprop="name" content="Início")
    if config.toggles.language_nav
      - var list = {opiniao:'Opinião', politica:'Política', direitos_humanos:'Direitos Humanos', cultura:'Cultura', geral:'Geral', internacional:'Internacional', especiais:'Especiais', radioagencia: 'Radioagência'}
    else
      - var list = {opiniao:'Opinião', politica:'Política', direitos_humanos:'Direitos Humanos', cultura:'Cultura', geral:'Geral', internacional:'Internacional', especiais:'Especiais', espanol:'Español', radioagencia: 'Radioagência'}      
    each val,index in list
      li
        a(itemprop="url", href="/" + index + "/")= val
        meta(itemprop="name" content=val)

