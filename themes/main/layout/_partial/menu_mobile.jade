nav#menu-mobile
  h2(class="offscreen") Menu Principal
  header.menu-header
    img#close-button(src="/img/close-bttn.svg" alt="Botao fechar")
    a(href="/")
      img#logo-menu-mobile(src="/img/logo.svg" alt="Logo do brasil de fato")
  .menu-scrollable
    ul
      li
        a(href="/")= 'Início'
      each val, index in {opiniao:"Opinião", politica:"Política", direitos_humanos:"Direitos Humanos", cultura:"Cultura", geral:"Geral", internacional:"Internacional", especiais:"Especiais", espanol:"Español"}
        li
          a(href="/" + index + "/")= val
      each val, index in {quem_somos:"Quem Somos", parceiros:"Parceiros", publicidade:"Publicidade", contato:"Contato"}
        li
          a(href="/" + index + ".html")= val
    include social-media-icons
