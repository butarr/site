meta(property="og:title" content="#{page.title} | #{config.title}")
meta(property="og:description" content=page.description)
meta(property="og:type" content="article")
meta(property="article:published_time" content=page.date.toISOString())
meta(property="article:section" content=page.area)
meta(property="article:tag" content=page.hat)

if page.cover
  meta(property="og:image" content="https:#{page.cover.link}")
else
  meta(property="og:image" content="#{config.url}#{config.logo}")
