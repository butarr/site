doctype html
block vars
  - var bodyclass = null;
html(lang='pt-BR')
  head
    include _partial/head
  body(class=bodyclass)
    header#page-header
      .banner
        a(href="#{ url_for('index.html') }", title="Link para a página principal")
          img(src="#{ url_for('img/logo.png') }", alt="imagem banner")
      .menu-options(data-toggle="nav.menu")
        i.fa.fa-bars
      nav.menu(itemscope, itemtype="http://schema.org/SiteNavigationElement")
        ul
          li
            a.active(itemprop="url", href="#")= "Economia"
          li
            a(itemprop="url", href="#")= "Cultura"
          li
            a(itemprop="url", href="#")= "Política"
          li
            a(itemprop="url", href="#")= "Saúde"
          li
            a(itemprop="url", href="#")= "Brasil"
          li
            a(itemprop="url", href="#")= "Mundo"

      block header
    main#content
      block content
    block after-content
    footer#page-footer
      include _partial/footer
  include _partial/after_footer
