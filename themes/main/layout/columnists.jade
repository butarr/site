extends base

append content
  section#columnists(itemscope itemtype="http://schema.org/ItemList")
    h2.page-name Colunistas

    each post in page.columns
      article.column(itemscope itemtype="http://schema.org/BlogPosting" itemprop="itemListElement")
        - var columnist = site.data.columnists[post.columnist];
        - var published_date = new Date(post.date)
        .person-cell(itemscope itemtype="http://schema.org/Person")
          .person-container
            a(href=post.path title="link para a pagina do colunista")
              img.profile-image(itemprop="image" alt="Imagem de perfil do Colunista" src=columnist.photo )
              meta(itemprop="image" content='http:'+columnist.photo)
            a(href=post.path title="link para a pagina do colunista")
              h4.name(itemprop="name")= columnist.name

        .text
          h4.name(itemprop="name")= columnist.name
          a(href=post.path itemprop="url")
            h3.title(itemprop="headline")= post.title
          time.date(datetime=published_date.toISOString(), itemprop="datePublished")=date(published_date, 'DD/MM/YYYY') + ", Ã s " + time(published_date, 'HH:MM')
          a(href=post.path itemprop="url")
            p.description(itemprop="description")=post.description
