extends base

append content
  include _partial/post/social_network

append content
  include _partial/post/breadcrumb

append content
  section#home(itemtype="http://schema.org/ItemList")
    h1 Not√≠cias
    - var post = page.posts.toArray()[0]
      article.new(itemprop="itemListElement", itemscope, itemtype="http://schema.org/ListItem")
        header.new-content.desktop
          p.hat=post.hat
          a(href="#{ url_for(post.path) }", title=post.newTitle, itemprop="url")
            h2.title(itemprop="name")= post.newTitle
          p.description(itemprop="description")= post.description
        figure
          - if (!!post.cover) {
            a(href="#{ url_for(post.path) }", title=post.newTitle, itemprop="url")
              img(alt=post.cover.subtitle, src="#{ post.cover.url } ",  itemprop="image")
            figcaption=post.cover.subtitle
          - }

    - each post, index in page.posts.toArray().slice(1, -1)
      article.new(itemprop="itemListElement", itemscope, itemtype="http://schema.org/ListItem")
        figure
          - if (!!post.cover) {
            a(href="#{ url_for(post.path) }", title=post.newTitle, itemprop="url")
              img(alt=post.cover.subtitle, src="#{ post.cover.url } ",  itemprop="image")
            figcaption=post.cover.subtitle
          - }
        header.new-content
          p.hat=post.hat
          a(href="#{ url_for(post.path) }", title=post.newTitle, itemprop="url")
            h2.title(itemprop="name")= post.newTitle
          p.description(itemprop="description")= post.description

