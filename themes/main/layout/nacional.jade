extend base

append content
  #fb-root

  section#home
    section.main
      if page.featured_01
        - var post=page.featured_01
        - var imageDescription=post.cover.subtitle + ' - Créditos: ' + post.cover.credits
        article#featured-1(itemscope itemtype="https://schema.org/NewsArticle" itemprop="itemListElement" class="featured-big-picture" class="divisor" class="spacing")
          a(href=post.path)
            figure
              img(src=post.cover.small alt=imageDescription title=imageDescription itemprop="image")
              figcaption
                h3.title(itemprop="headline")= post.title

      if page.featured_02
        - var post=page.featured_02
        - var imageDescription=post.cover.subtitle + ' - Créditos: ' + post.cover.credits
        article#featured-2(itemscope itemtype="https://schema.org/NewsArticle" itemprop="itemListElement" class="featured-small-picture" class="divisor" class="spacing")
          a(href=post.path)
            figure(style="background-image: url(#{post.cover.small});" aria-label=imageDescription title=imageDescription itemprop="image")
            h3.title(itemprop="headline")= post.title

      if page.featured_03
        - var post=page.featured_03
        - var imageDescription=post.cover.subtitle + ' - Créditos: ' + post.cover.credits
        article#featured-3(itemscope itemtype="https://schema.org/NewsArticle" itemprop="itemListElement" class="featured-small-picture" class="divisor" class="spacing")
          a(href=post.path)
            figure(style="background-image: url(#{post.cover.small});" aria-label=imageDescription title=imageDescription itemprop="image")
            h3.title(itemprop="headline")= post.title

      #featured-text-container(class="divisor" class= "spacing")
        if page.featured_04
          - var post=page.featured_04
          article(itemscope itemtype="https://schema.org/NewsArticle" itemprop="itemListElement" class="featured-text-and-title" class= "spacing")
            a(href=post.path)
              h3.title(itemprop="headline")= post.title
            a(href=post.path)
              p.description= post.description

        if page.featured_05
          - var post=page.featured_05
          .box-container(class= "spacing")
            article(itemscope itemtype="https://schema.org/NewsArticle" itemprop="itemListElement" class="featured-text-box")
              a(href=post.path)
                h3.title(itemprop="headline")= post.title
              meta(itemprop="datePublished" content=post.date)

        if page.featured_06
          - var post=page.featured_06
          .box-container(class= "spacing")
            article(itemscope itemtype="https://schema.org/NewsArticle" itemprop="itemListElement" class="featured-text-box")
              a(href=post.path)
                h3.title(itemprop="headline")= post.title
              meta(itemprop="datePublished" content=post.date)

      figure(class= "radar" class= "spacing")
        a(target="_blank", href="#{ url_for('//radar.brasildefato.com.br') }", title="Radar dos Movimentos")
          img#radar_mobile(src="#{ url_for('img/radar_mobile.png') }", alt="imagem radar dos movimentos")

      section.columns(itemscope itemtype="http://schema.org/ItemList" class="spacing")
        h2.section-name Colunistas
        if page.column_01
          - var column=page.column_01
          - var columnist=site.data.columnists[column.columnist]
          article.columnist(itemscope itemtype="http://schema.org/BlogPosting" itemprop="itemListElement")
            figure
              img(src=columnist.photo alt="Imagem de perfil do colunista" title="Imagem de perfil do colunista" itemscope itemtype="https://schema.org/Person" itemprop="image")
            section.column
              h3.name(itemscope itemtype="https://schema.org/Person" itemprop="name")= columnist.name
              p.title(itemprop="headline")= column.title

        if page.column_02
          - var column=page.column_02
          - var columnist=site.data.columnists[column.columnist]
          article.columnist(itemscope itemtype="http://schema.org/BlogPosting" itemprop="itemListElement")
            figure
              img(src= columnist.photo alt="Imagem de perfil do colunista" title="Imagem de perfil do colunista" itemscope itemtype="https://schema.org/Person" itemprop="image")
            section.column
              h3.name(itemscope itemtype="https://schema.org/Person" itemprop="name")= columnist.name
              p.title(itemprop="headline")= column.title

        if page.column_03
          - var column=page.column_03
          - var columnist=site.data.columnists[column.columnist]
          article.columnist(itemscope itemtype="http://schema.org/BlogPosting" itemprop="itemListElement")
            figure
              img(src=columnist.photo alt="Imagem de perfil do colunista" title="Imagem de perfil do colunista" itemscope itemtype="https://schema.org/Person" itemprop="image")
            section.column
              h3.name(itemscope itemtype="https://schema.org/Person" itemprop="name")= columnist.name
              p.title(itemprop="headline")= column.title    

      section#videos(class="gallery-videos" class="spacing")
        h2.section-name Vídeos
        iframe(src="//www.youtube.com/embed/zZrbJmAP8W8?list=PLytfbsQYLZpB5uDo8LRdjf9X9RfOlFw4d" allowfullscreen)

      section#images(class= "gallery-images" class="spacing")
        h2.section-name Galeria    
        .gallery-desktop
          a(data-flickr-embed="true", href="//www.flickr.com/photos/brasildefato/albums/72157665304017756" title="Brasil de Fato")
            img(src="//farm2.staticflickr.com/1555/25625164736_aa741c11ef.jpg", width="450" alt="Brasil de Fato")
          script(async="" src="//embedr.flickr.com/assets/client-code.js" charset="utf-8")
        .gallery-mobile
          a(data-flickr-embed="true" href="//www.flickr.com/photos/brasildefato/albums/72157665304017756" title="Brasil de Fato")
            img(src="//farm4.staticflickr.com/3679/11329756945_a5e569eb4c_n.jpg" width="370" alt="Brasil de Fato")
          script(async="" src="//embedr.flickr.com/assets/client-code.js" charset="utf-8")
        .gallery-mobile-smaller
          a(data-flickr-embed="true" href="//www.flickr.com/photos/brasildefato/albums/72157665304017756" title="Brasil de Fato")
            img(src="//farm4.staticflickr.com/3679/11329756945_a5e569eb4c_n.jpg" width="290" alt="Brasil de Fato")
          script(async="" src="//embedr.flickr.com/assets/client-code.js" charset="utf-8")

      if page.featured_07
        - var post=page.featured_07
        - var imageDescription=post.cover.subtitle + " - Créditos: " + post.cover.credits
        article#featured-7(itemscope itemtype="https://schema.org/NewsArticle" itemprop="itemListElement" class="article-footer" class="spacing")
          span.hat(itemprop="about")= post.hat
          a(href=post.path)
            figure(style="background-image: url(#{post.cover.small});" aria-label=imageDescription title=imageDescription itemprop="image")
            h3.title(itemprop="headline")= post.title

      if page.featured_08
        - var post=page.featured_08
        - var imageDescription=post.cover.subtitle + " - Créditos: " + post.cover.credits
        article#featured-8(itemscope itemtype="https://schema.org/NewsArticle" itemprop="itemListElement" class="article-footer" class="spacing")
          span.hat(itemprop="about")= post.hat
          a(href=post.path)
            figure(style="background-image: url(#{post.cover.small});" aria-label=imageDescription title=imageDescription itemprop="image")
            h2.title(itemprop="headline")= post.title
      
      if page.photo_caption
        article.photo-caption(class= "spacing")
          - var post=page.photo_caption
          - var imageDescription=post.cover.subtitle + " - Créditos: " + post.cover.credits
            figure
              img(src=post.cover.small alt=imageDescription title=imageDescription itemprop="image")
              figcaption
                h3.title(itemprop="headline")= post.title
                p.credits(itemprop="creator")= post.cover.credits
       
      if page.last_news
        section.last-news(class="spacing")
          meta(itemprop="itemListOrder" content="http://schema.org/ItemListUnordered")
          h2.section-name Últimas notícias
          if page.last_news
            ol
              each post in page.last_news
                li
                  a.title(itemprop="url", href=post.path)=post.title
                  meta(itemprop="datePublished" content=post.date)

      if page.most_read
        section.most-read(class="spacing")
          meta(itemprop="itemListOrder" content="http://schema.org/ItemListOrderAscending")
          h2.section-name Mais lidas
          if page.most_read
            ol
              each post in page.most_read
                li
                  a.title(itemprop="url", href=post.path)=post.title
                  meta(itemprop="datePublished" content=post.date)

    aside.sidebar
      figure(class= "radar" class= "spacing")
        a(target="_blank", href="#{ url_for('//radar.brasildefato.com.br') }", title="Radar dos Movimentos")
          img#radar_desktop(src="#{ url_for('img/radar.png') }", alt="imagem radar dos movimentos")

      section.printed-news
        h1.section-name Edições Impressas
        figure
          a(target="_blank", href="#{ url_for('//radar.brasildefato.com.br') }", title="Brasil de Fato - Minas Gerais")
            img#radar_desktop(src="#{ url_for('img/tabloide-mg.png') }", alt="imagem do tabloide")
        figure
          a(target="_blank", href="#{ url_for('//radar.brasildefato.com.br') }", title="Brasil de Fato - Rio de Janeiro")
            img#radar_desktop(src="#{ url_for('img/tabloide-pr.png') }", alt="imagem do tabloide")
        figure
          a(target="_blank", href="#{ url_for('//radar.brasildefato.com.br') }", title="Brasil de Fato - Rio de Janeiro")
            img#radar_desktop(src="#{ url_for('img/tabloide-rj.png') }", alt="imagem do tabloide")

      section(class= "columns" class="spacing" itemscope itemtype="http://schema.org/ItemList")
        h2.section-name Colunistas
        if page.column_01
          - var column=page.column_01
          - var columnist=site.data.columnists[column.columnist]
          article.columnist(itemscope itemtype="http://schema.org/BlogPosting" itemprop="itemListElement")
            figure
              img(src=columnist.photo alt="Imagem de perfil do colunista" title="Imagem de perfil do colunista" itemscope itemtype="https://schema.org/Person" itemprop="image")
            section.column
              h3.name(itemscope itemtype="https://schema.org/Person" itemprop="name")= columnist.name
              p.title(itemprop="headline")= column.title

        if page.column_02
          - var column=page.column_02
          - var columnist=site.data.columnists[column.columnist]
          article.columnist(itemscope itemtype="http://schema.org/BlogPosting" itemprop="itemListElement")
            figure
              img(src= columnist.photo alt="Imagem de perfil do colunista" title="Imagem de perfil do colunista" itemscope itemtype="https://schema.org/Person" itemprop="image")
            section.column
              h3.name(itemscope itemtype="https://schema.org/Person" itemprop="name")= columnist.name
              p.title(itemprop="headline")= column.title

        if page.column_03
          - var column=page.column_03
          - var columnist=site.data.columnists[column.columnist]
          article.columnist(itemscope itemtype="http://schema.org/BlogPosting" itemprop="itemListElement")
            figure
              img(src=columnist.photo alt="Imagem de perfil do colunista" title="Imagem de perfil do colunista" itemscope itemtype="https://schema.org/Person" itemprop="image")
            section.column
              h3.name(itemscope itemtype="https://schema.org/Person" itemprop="name")= columnist.name
              p.title(itemprop="headline")= column.title
      
      section
        .fb-page(data-href='https://www.facebook.com/brasildefato/', data-width='920px', data-small-header='true', data-adapt-container-width='true', data-hide-cover='false', data-show-facepile='true')
          .fb-xfbml-parse-ignore
            blockquote(cite='https://www.facebook.com/brasildefato/')
              a(href='https://www.facebook.com/brasildefato/')
                | Brasil de Fato

      if page.last_news
        section#side.last-news(class="spacing")
          meta(itemprop="itemListOrder" content="http://schema.org/ItemListUnordered")
          h2.section-name Últimas notícias
          if page.last_news
            ol
              each post in page.last_news
                li.inactive
                  a.title(itemprop="url", href=post.path)=post.title
                  meta(itemprop="datePublished" content=post.date)
