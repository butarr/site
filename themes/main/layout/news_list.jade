extends base

append content
  section#news-list(itemscope itemtype="http://schema.org/ItemList")
    h2.section-name(itemprop="about")= page.area
    each post in page.news
      a(href=post.path class= "divisor")
        article.news-item(itemscope itemtype="https://schema.org/NewsArticle" itemprop="itemListElement")
          if post.cover
            - var imageDescription= post.cover.subtitle + ' - Cr√©ditos: ' + post.cover.credits
            .image
              figure(style="background-image: url(#{post.cover.small});" aria-label=imageDescription title=imageDescription itemprop="image")
          .content
            h3.title(itemprop= "headline")= post.title
            p.description(itemprop="description")= post.description