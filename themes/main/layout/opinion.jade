extends base

append content
  include _partial/opinion/social_network

append content
  include _partial/opinion/breadcrumb

append content
  article#opinion(itemscope, itemtype="NewsArticle")
    header
      span.hat Colunista
      - var columnist = site.data.columnists[page.columnist]
      section.person(itemscope, itemtype="http://schema.org/Person")
        a(href="#{ url_for( columnist.path ) }", title="Link para o perfil do colunista")
          img.profile-image(itemprop="image", alt="Imagem de perfil do Colunista", src=columnist.photo )
        h1.name(itemprop="name")=columnist.name
        h2.job-title(itemprop="jobTitle")=columnist.description
    h1.title(itemprop="about")= page.title
    p.description(itemprop="description")= page.description
    section.content
      != page.content

append content
  include _partial/opinion/other_opinions
  include _partial/opinion/last_articles
  include _partial/opinion/last_news

append after-content
  include _partial/opinion/newsletter
