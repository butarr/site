extends base

append content
  include _partial/opinion/social_network

append content
  include _partial/opinion/breadcrumb

append content
  section#opinions(itemscope, itemtype="http://schema.org/ItemList")
    h1.hat Colunistas
    - each post, index in site.posts.find({'layout': 'opinion'}).toArray()
      article.opinion(itemscope, itemtype="NewsArticle", itemprop="itemListElement")
        section.person(itemscope, itemtype="http://schema.org/Person")
          img.profile-image(itemprop="image", alt="Imagem de perfil do Colunista", src=site.data.columnists[post.columnist].photo )
          h1.name(itemprop="name")= site.data.columnists[post.columnist].name
          h2.job-title(itemprop="jobTitle")= site.data.columnists[post.columnist].description
        h1.title(itemprop="about")
          a(href="#{ url_for(post.path) }")
            time.date-published= post.date.format('DD/MM/YYYY')
            = post.title

append content
  aside#opinions-aside
    include _partial/post/most_reads
