extends base

append content
  article#post(itemtype="http://schema.org/NewsArticle", itemscope)
    header
      span.hat(itemprop="about")= page.hat
      h1.title(itemprop="headline")= page.title
      h2.description(itemprop="description")= page.description
      section.desktop.place-and-time
        time(datetime=page.date)= page.date.locale('pt-br').format('dddd, DD [de] MMMM [de] YYYY, [às] HH:mm')
      if page.cover.medium
        figure(itemprop="image", itemscope, itemtype="http://schema.org/ImageObject")
          - var imageCaption = page.cover.subtitle + ' / ' + page.cover.credits
          - var imageDescription = page.cover.subtitle + ' - Créditos: ' + page.cover.credits
          img(itemprop="thumbnail", alt=imageDescription, title=imageDescription, src=page.cover['medium'] )
          figcaption(itemprop="caption")= imageCaption
      
      section.place-and-time
        span.author(rel="author", itemprop="author")= page.author
        br
        span.place(rel="place", itemprop="contentLocation")= page.place
        time(datetime=page.date, itemprop="datePublished")= page.date.locale('pt-br').format('LLLL')

    section.content
     != page.content
