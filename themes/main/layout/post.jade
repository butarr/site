extends base

append content
  include _partial/post/social_network

append content
  include _partial/post/breadcrumb

append content
  article#post(itemtype="http://schema.org/NewsArticle", itemscope)
    header
      span.hat(itemprop="about")= page.hat
      h1.title(itemprop="headline")= page.newTitle
      h2.description(itemprop="description")= page.description
      section.desktop.place-and-time
        time(datetime=page.date)= page.date.locale('pt-br').format('dddd, DD [de] MMMM [de] YYYY, [Ã s] HH:mm')
      figure(itemprop="image", itemscope, itemtype="http://schema.org/ImageObject")
        img(itemprop="thumbnail", alt="Foto capa da noticia", src=page.cover['url'] )
        figcaption(itemprop="caption")= page.cover.subtitle
      section.place-and-time
        span.author(rel="author", itemprop="author")= page.author
        br
        span.place(rel="place", itemprop="contentLocation")= page.place
        time(datetime=page.date, itemprop="datePublished")= page.date.locale('pt-br').format('LLLL')

    section.content
     != page.content

append content
  include _partial/post/more_information
  include _partial/post/last_news
